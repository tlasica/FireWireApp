<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/content_view"
    tools:context="pl.tlasica.firewireapp.PlayActivity"
    android:theme="@style/FullscreenTheme"
    android:touchscreenBlocksFocus="false">

    <RelativeLayout
        android:id="@+id/game_header"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/logo_img"
            android:src="@drawable/shockcircle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/level_title"
            android:text="level name"
            android:layout_toRightOf="@+id/logo_img"
            android:layout_toLeftOf="@+id/level_time"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elegantTextHeight="true"
            android:elevation="2dp"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textIsSelectable="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/level_time"
            android:text="00:23"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textColor="@android:color/holo_orange_light" />

    </RelativeLayout>

    <pl.tlasica.firewireapp.GameView
        android:id="@+id/game_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="7dp"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/game_header"
        android:layout_above="@+id/connectors_view"
        android:background="@color/myGreen"
        />

    <!-- #009240 -->

    <GridView
        android:id="@+id/connectors_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_min_width"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">
    </GridView>

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <!--
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />
    -->

</RelativeLayout>
